		<td><%=button_to "Eliminar", empresa_sucursal_menu_entry_path(@sucursal.empresa, @sucursal, m), 
		method: :delete, data: {confirm: "Â¿Estas seguro?"}%></td>
		<%if show_edit%>
		<td> <%=link_to "Editar", edit_empresa_sucursal_menu_entry_path(@sucursal.empresa, @sucursal, m), remote: :true%></td>
		<%end%>
	</tr>
<% end %>
</table>