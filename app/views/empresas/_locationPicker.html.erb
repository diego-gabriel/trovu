<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
<%=javascript_include_tag "locationPicker"%>

<div id = 'locationPicker'></div>
<script type="text/javascript">
	
	var latInput = $('#latInput');
	var lngInput = $('#lngInput');
	var lat = latInput.val() != undefined ? latInput.val() : -17.38533;
	var lng = lngInput.val() != undefined? lngInput.val() : -66.15442;

	$('#locationPicker').locationpicker({
		location: {latitude: lat, longitude: lng},
		radius: 30,
		inputBinding: {
			latitudeInput: latInput,
			longitudeInput: lngInput,
			locationNameInput: $('#locNameInput')
		}
	});	
</script>